{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "dist",
        "public/uploads"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "runOnChangeOnly": false,
    "watch": ["./app.js", "./**/*.graphql", "./**/*.gql"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,graphql"
}
